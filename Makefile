AR := ar
CXX := g++

ifeq ($(debug), y)
	CXXFLAGS := -g
else
	CXXFLAGS := -O2 -DNDEBUG
endif
CXXFLAGS := $(CXXFLAGS) -Wall -Werror -Wextra -fPIC

TARGET := libtext_utils.a libtext_utils.so

.PHONY: all clean

all: $(TARGET)

text_utils_OBJS := text_utils.cpp.text_utils.o

text_utils_INCLUDE :=

text_utils_LIBS :=

text_utils.cpp.text_utils.o: text_utils.cpp
	$(CXX) $(CXXFLAGS) $(text_utils_INCLUDE) -c $< -o $@

libtext_utils.a: $(text_utils_OBJS)
	$(AR) rc $@ $^

libtext_utils.so: $(text_utils_OBJS)
	$(CXX) -shared -o $@ $^ $(text_utils_LIBS)

clean:
	rm -f $(TARGET) $(text_utils_OBJS)
